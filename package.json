{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "productName": "PA Rifas - rifas online",
  "author": {
    "name": "Natanael Bezerra",
    "email": "contato.nk.info@gmail.com"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "axios": "^0.24.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "react-svg": "^14.1.8",
    "swr": "^1.1.2"
  },
  "scripts": {
    "dev": "yarn react-scripts start",
    "build": "react-scripts build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "package-win": "electron-builder build --x64 --win nsis -c.extraMetadata.main=build/electron.js --publish never",
    "package-linux": "electron-builder build --linux deb --x64 -c.extraMetadata.main=build/electron.js --publish never",
    "package-mac": "electron-builder build --mac dmg --x64 -c.extraMetadata.main=build/electron.js --publish never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.15",
    "wait-on": "^6.0.0"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "palmieri",
      "owner": "nkinformatica"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icone.icns"
    },
    "win": {
      "icon": "build/icone.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": "deb",
      "icon": "build/icone.png",
      "category": "Office"
    }
  }
}
